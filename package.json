{
    "name": "write-on-app-root",
    "private": true,
    "version": "1.0.0",
    "packageManager": "pnpm@10.15.1",
    "scripts": {
        "dev": "pnpm --filter write-on-app dev",
        "turbo:dev": "turbo run dev --parallel",
        "build:vendor": "pnpm -w -r --filter \"./vendor/excalidraw/packages/*\" run build",
        "build:apps": "pnpm -w -r --filter \"./apps/*\" run build",
        "turbo:build": "turbo run build",
        "build:app": "pnpm --filter \"./apps/write-on-app\" run build",
        "start": "pnpm --filter write-on-app start",
        "turbo:lint": "turbo run lint",
        "turbo:test": "turbo run test"
    },
    "pnpm": {
        "overrides": {
            "@excalidraw/*": "workspace:*"
        },
        "onlyBuiltDependencies": [
            "@tailwindcss/oxide",
            "core-js",
            "esbuild",
            "sharp",
            "unrs-resolver"
        ]
    },
    "workspaces": [
        "apps/*",
        "packages/*",
        "vendor/excalidraw/packages/*"
    ],
    "devDependencies": {
        "esbuild": "0.19.10",
        "esbuild-sass-plugin": "2.16.0",
        "sass": "1.51.0",
        "turbo": "^2.5.6",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@braintree/sanitize-url": "6.0.2",
        "es6-promise-pool": "2.5.0",
        "fractional-indexing": "3.2.0",
        "lodash.throttle": "4.1.1",
        "lucide-react": "^0.544.0",
        "nanoid": "3.3.3",
        "open-color": "1.9.1",
        "perfect-freehand": "1.2.0",
        "points-on-curve": "1.0.1",
        "roughjs": "4.6.4"
    }
}
